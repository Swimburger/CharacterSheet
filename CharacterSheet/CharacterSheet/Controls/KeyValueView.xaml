<?xml version="1.0" encoding="UTF-8"?>
<StackLayout xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CharacterSheet.Controls.KeyValueView"
             x:Name="this"
             Orientation="Vertical" 
             BackgroundColor="Orange"
             BindingContext="{x:Reference this}">
    <StackLayout.GestureRecognizers>
        <TapGestureRecognizer Tapped="OnTapped"  NumberOfTapsRequired="1" />
    </StackLayout.GestureRecognizers>
    <Label Text="{Binding BoxTitle}"  d:Text="H.P." HorizontalOptions="Center" />
    <Label Text="{Binding BoxValue}"  d:Text="20" HorizontalOptions="Center"/>
</StackLayout>